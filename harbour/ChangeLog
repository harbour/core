   - contrib/hbziparch/License.txt
   - contrib/hbziparch/ZipCrc32Cryptograph.cpp
   - contrib/hbziparch/ZipAesCryptograph.h
   - contrib/hbziparch/ZipPathComponent_lnx.cpp
   - contrib/hbziparch/ZipPlatformComm.cpp
